#!/bin/bash

set -e

reuse lint

ruff check

for FILE in $(git diff --cached --name-only --diff-filter=M)
do
    echo "Checking file: $FILE"
    python3 ./scripts/check-copyright-year.py ./$FILE
done
echo "Copyright year checker satisfied"